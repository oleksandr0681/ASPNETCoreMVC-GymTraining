@model GymTraining.Models.SportsmanData

@{
    ViewData["Title"] = "Створити";
}

<h1>Створити</h1>

<h4>Інформація про спортсмена</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" class="custom-form">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group" hidden>
                <label asp-for="ApplicationUserId" class="control-label"></label>
                <select asp-for="ApplicationUserId" class ="form-control" asp-items="ViewBag.ApplicationUserId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TrainerDataId" class="control-label"></label>
                <select asp-for="TrainerDataId" class ="form-control" asp-items="ViewBag.TrainerDataId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Створити" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Повернутись до списку</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
